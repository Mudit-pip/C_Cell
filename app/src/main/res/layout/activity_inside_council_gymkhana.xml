<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211134"
    android:layout_gravity="center"
    tools:context=".gymkhana.inside_council_gymkhana">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_gymkhana_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/inside_council_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:fontFamily="@font/roboto_light"
                android:id="@+id/inside_council_club_info_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/frag_gymkhana_logo"></TextView>


            <ListView
                android:dividerHeight="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/inside_council_club_info_lbl"
                android:id="@+id/inside_council_peopleinfo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            <GridView
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:id="@+id/insidecouncil_clubs_grid"
                android:numColumns="2"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/inside_council_peopleinfo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></GridView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>