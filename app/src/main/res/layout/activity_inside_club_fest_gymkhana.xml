<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#211134"
    android:orientation="vertical"
    tools:context=".gymkhana.inside_club_fest_gymkhana">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:id="@+id/frag_gymkhana_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/inside_clubfest_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cosha"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/inside_clubfest_info_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/frag_gymkhana_logo"></TextView>

            <ListView
                android:id="@+id/inside_clubfest_peopleinfo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:dividerHeight="5dp"
                app:layout_constraintTop_toBottomOf="@id/inside_clubfest_info_lbl"></ListView>

            <TextView
                android:textSize="18dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:id="@+id/insideclubfest_gallery_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inside_clubfest_peopleinfo_list"
                android:text="Gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/insideclubfest_gallery_txt"
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:showTopShadow="false"
                app:showBottomShadow="false"/>

            <TextView
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:id="@+id/insideclubfest_connect_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/carousel"
                android:text="Connect with us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <LinearLayout
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/insideclubfest_connect_txt"
                app:layout_constraintStart_toStartOf="@id/insideclubfest_connect_txt"
                app:layout_constraintEnd_toEndOf="@id/insideclubfest_connect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/inside_clubfest_insta_img"
                    android:padding="10dp"
                    android:src="@drawable/insta_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"></ImageView>

                <ImageView
                    android:id="@+id/inside_clubfest_gmail_img"
                    android:padding="10dp"
                    android:src="@drawable/gmail_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"></ImageView>

                <ImageView
                    android:id="@+id/inside_clubfest_youtube_img"
                    android:padding="10dp"
                    android:src="@drawable/youtube_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"></ImageView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>