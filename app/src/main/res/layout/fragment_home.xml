<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.fragment_home">

    <TextView
        android:textSize="18dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/frag_home_quicklink_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Quick Links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <HorizontalScrollView
        android:id="@+id/frag_home_horizontalscroll_top"
        app:layout_constraintTop_toBottomOf="@+id/frag_home_quicklink_txt"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_acad_timetable"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/acadtimetable_img" />

            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_bus_timetable"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bus_timetable_img" />

            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_mess_menu"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/messmenu_img" />

            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_holiday_calendar"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="#FFFFFF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/holidaycal_img" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:textSize="18dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:id="@+id/frag_home_notificationpannel_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_home_horizontalscroll_top"
        android:text="Notification Pannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ListView
        android:id="@+id/frag_home_notification_list"
        app:layout_constraintTop_toBottomOf="@id/frag_home_notificationpannel_txt"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>